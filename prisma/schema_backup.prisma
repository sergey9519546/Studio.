// prisma/schema.prisma
// Comprehensive database schema for Creative Studio Platform

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Core User Management
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  avatar    String?
  role      String   @default("user")
  password  String?  // For authentication
  googleAccessToken  String?  // Google OAuth access token
  googleRefreshToken String?  // Google OAuth refresh token
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  projects   Project[]
  assignments Assignment[]
  scripts    Script[]
  assets     Asset[]
  knowledgeSources KnowledgeSource[]
  conversations Conversation[]
  pageMedia  PageMedia[]
  aiUsage    AIUsage[]

  @@map("users")
}

// Project Management
model Project {
  id          String   @id @default(uuid())
  title       String?
  name        String?  @unique
  description String?
  client      String?
  clientName  String?
  status      ProjectStatus @default(PLANNED)
  startDate   DateTime?
  endDate     DateTime?
  budget      Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  userId        String?
  user          User?           @relation(fields: [userId], references: [id])
  roleRequirements RoleRequirement[]
  assignments   Assignment[]
  scripts       Script[]
  moodboardItems MoodboardItem[]
  assets        Asset[]         // Added missing relation
  knowledgeSources KnowledgeSource[]
  transcripts   Transcript[]
  conversations Conversation[]
  projectVersions ProjectVersion[]
  pageMedia  PageMedia[]
  aiUsage    AIUsage[]

  @@map("projects")
}

model RoleRequirement {
  id       String  @id @default(uuid())
  role     String
  count    Int?    @default(1)
  skills   String[] // Array of required skills
  projectId String
  
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  @@map("role_requirements")
}

// Freelancer Management
model Freelancer {
  id           String   @id @default(uuid())
  name         String
  email        String?  @unique
  contactInfo  String?  @unique
  skills       String[] // Array of skills
  role         String?
  rate         Float?
  status       FreelancerStatus @default(AVAILABLE)
  bio          String?
  phone        String?
  location     String?
  availability String?
  portfolio    String?
  notes        String?
  rating       Float?   @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  assignments Assignment[]

  @@map("freelancers")
}

// Assignment Management
model Assignment {
  id           String   @id @default(uuid())
  freelancerId String
  projectId    String
  role         String?  // Added missing role field
  startDate    DateTime?
  endDate      DateTime?
  allocation   Float?   // Percentage of time allocated
  status       AssignmentStatus @default(ACTIVE)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  freelancer   Freelancer @relation(fields: [freelancerId], references: [id])
  project      Project    @relation(fields: [projectId], references: [id])
  userId       String?
  user         User?      @relation(fields: [userId], references: [id])

  @@unique([freelancerId, projectId])
  @@map("assignments")
}

// Asset & Moodboard Management
model MoodboardItem {
  id           String   @id @default(uuid())
  url          String
  title        String?
  description  String?
  caption      String?  // Added missing caption field
  tags         String[]
  moods        String[]
  colors       String[]
  shotType     String?
  source       String   // 'upload', 'unsplash', 'external'
  assetId      String?  // Link to Asset table
  metadata     Json?
  isFavorite   Boolean  @default(false)
  projectId    String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  project      Project  @relation(fields: [projectId], references: [id])
  asset        Asset?   @relation(fields: [assetId], references: [id])
  collections  MoodboardCollectionItem[]

  @@map("moodboard_items")
}

model MoodboardCollection {
  id          String   @id @default(uuid())
  name        String
  description String?
  projectId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  items       MoodboardCollectionItem[]

  @@unique([name, projectId])
  @@map("moodboard_collections")
}

model MoodboardCollectionItem {
  id              String @id @default(uuid())
  collectionId    String
  moodboardItemId String

  collection      MoodboardCollection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  item            MoodboardItem       @relation(fields: [moodboardItemId], references: [id], onDelete: Cascade)

  @@unique([collectionId, moodboardItemId])
  @@map("moodboard_collection_items")
}

// Asset Management (added missing asset model)
model Asset {
  id          String   @id @default(uuid())
  title       String?
  url         String   // Public URL for access
  type        String   // 'image', 'video', 'document', etc.
  fileName    String?  // Original filename
  mimeType    String?  // MIME type
  sizeBytes   Int?     // File size in bytes
  storageKey  String?  // Storage key/path
  metadata    Json?
  projectId   String?
  userId      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  project     Project? @relation(fields: [projectId], references: [id])
  user        User?    @relation(fields: [userId], references: [id])
  moodboardItems MoodboardItem[]

  @@map("assets")
}

// Script Management
model Script {
  id        String   @id @default(uuid())
  title     String?
  content   String?
  tags      String[]
  projectId String
  userId    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  project Project @relation(fields: [projectId], references: [id])
  user    User?   @relation(fields: [userId], references: [id])

  @@map("scripts")
}

// Knowledge Management
model KnowledgeSource {
  id          String   @id @default(uuid())
  title       String
  content     String
  category    String
  sourceType  String   // 'asset', 'document', 'transcript', 'external'
  sourceId    String?
  projectId   String?
  userId      String?
  metadata    Json?
  embedding   Json?    // For vector search
  status      String?  @default("indexed") // Added missing status field
  type        String?  // Added missing type field
  originalContent String? // Added missing originalContent field
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  project Project? @relation(fields: [projectId], references: [id])
  user    User?    @relation(fields: [userId], references: [id])

  @@map("knowledge_sources")
}

// Transcript Management
model Transcript {
  id          String   @id @default(uuid())
  jobId       String   @unique
  title       String?
  content     String?
  sourceUrl   String?
  status      TranscriptStatus @default(PENDING)
  projectId   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  project Project? @relation(fields: [projectId], references: [id])

  @@map("transcripts")
}

// Conversation Management for AI Chat Persistence
model Conversation {
  id          String   @id @default(uuid())
  title       String?
  topic       String?
  projectId   String?
  userId      String?
  status      ConversationStatus @default(ACTIVE)
  messageCount Int     @default(0)
  metadata    Json?    // { tags, theme, context_type }
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  project        Project?         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user           User?            @relation(fields: [userId], references: [id])
  messages       Message[]
  contextSnapshots ContextSnapshot[]

  @@index([projectId])
  @@index([userId])
  @@index([status])
  @@map("conversations")
}

model Message {
  id          String   @id @default(uuid())
  conversationId String
  role        MessageRole
  content     String
  tokens      Int?     // Track token usage
  embeddingId String?   // Link to embedding if indexed as knowledge source
  referencedSources String[] // JSON array of KnowledgeSource IDs cited in response
  createdAt   DateTime @default(now())

  // Relations
  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@index([role])
  @@map("messages")
}

model ContextSnapshot {
  id          String   @id @default(uuid())
  conversationId String
  projectId   String?
  briefContext Json?    // Project brief at this point
  brandTensor  Json?    // Brand context
  assetIntelligence Json? // Asset analysis snapshot
  knowledgeSourceIds String[] // Array of KnowledgeSource IDs active at this point
  capturedAt  DateTime @default(now())

  // Relations
  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@map("context_snapshots")
}

// Project Version Management for Auto-save and Version History
model ProjectVersion {
  id          String   @id @default(uuid())
  projectId   String
  version     Int
  briefSnapshot String?
  tagsSnapshot  String[] // Array of tags
  assetsSnapshot Json?
  createdAt   DateTime @default(now())
  createdBy   String?  // userId
  changeDescription String?

  // Relations
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@map("project_versions")
}

// Embedding Management for Vector Search
model Embedding {
  id          String   @id @default(uuid())
  content     String
  embedding   Json     // Vector embedding data
  model       String   // embedding model used (e.g., 'text-embedding-004')
  metadata    Json?    // Additional metadata
  createdAt   DateTime @default(now())

  @@map("embeddings")
}

// Page Media Management
model PageMedia {
  id          String   @id @default(uuid())
  url         String
  title       String?
  alt         String?
  s3Key       String?  // Storage key for S3/GCS
  mediaType   String?  // Type of media (image, video, document)
  filename    String?  // Original filename
  size        Int?     // File size in bytes
  mimeType    String?  // MIME type
  projectId   String?
  userId      String?
  metadata    Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  project Project? @relation(fields: [projectId], references: [id])
  user    User?    @relation(fields: [userId], references: [id])

  @@map("page_media")
}

// AI Usage Tracking
model AIUsage {
  id          String   @id @default(uuid())
  userId      String?
  projectId   String?
  model       String   // AI model used
  tokens      Int      // Number of tokens used
  cost        Float?   // Cost in USD
  operation   String   // Type of operation (chat, analysis, generation, etc.)
  endpoint    String?  // API endpoint used
  timestamp   DateTime? // Custom timestamp (different from createdAt)
  cached      Boolean? @default(false) // Whether response was cached
  duration    Int?     // Response time in milliseconds
  metadata    Json?    // Additional metadata
  createdAt   DateTime @default(now())

  // Relations
  user    User?    @relation(fields: [userId], references: [id])
  project Project? @relation(fields: [projectId], references: [id])

  @@index([userId])
  @@index([projectId])
  @@index([createdAt])
  @@map("ai_usage")
}

// Enums
enum ProjectStatus {
  PLANNED
  IN_PROGRESS
  REVIEW
  DELIVERED
  ARCHIVED
}

enum FreelancerStatus {
  AVAILABLE
  BUSY
  UNAVAILABLE
}

enum AssignmentStatus {
  ACTIVE
  COMPLETED
  CANCELLED
  ON_HOLD
}

enum TranscriptStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum ConversationStatus {
  ACTIVE
  ARCHIVED
  STARRED
}

enum MessageRole {
  USER
  ASSISTANT
}

// Note: Keeping the original User model for backward compatibility (removed unused Post model)
