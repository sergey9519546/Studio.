// prisma/schema.prisma
// Comprehensive database schema for Creative Studio Platform

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Core User Management
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  avatar    String?
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  projects   Project[]
  assignments Assignment[]
  scripts    Script[]
  knowledgeSources KnowledgeSource[]
  
  @@map("users")
}

// Project Management
model Project {
  id          String   @id @default(uuid())
  title       String?
  name        String?  @unique
  description String?
  client      String?
  clientName  String?
  status      ProjectStatus @default(PLANNED)
  startDate   DateTime?
  endDate     DateTime?
  budget      Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  userId        String?
  user          User?           @relation(fields: [userId], references: [id])
  roleRequirements RoleRequirement[]
  assignments   Assignment[]
  scripts       Script[]
  moodboardItems MoodboardItem[]
  knowledgeSources KnowledgeSource[]
  transcripts   Transcript[]

  @@map("projects")
}

model RoleRequirement {
  id       String  @id @default(uuid())
  role     String
  count    Int?    @default(1)
  skills   String[] // Array of required skills
  projectId String
  
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  @@map("role_requirements")
}

// Freelancer Management
model Freelancer {
  id           String   @id @default(uuid())
  name         String
  email        String?  @unique
  contactInfo  String?  @unique
  skills       String[] // Array of skills
  role         String?
  rate         Float?
  status       FreelancerStatus @default(AVAILABLE)
  bio          String?
  phone        String?
  location     String?
  availability String?
  portfolio    String?
  notes        String?
  rating       Float?   @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  assignments Assignment[]

  @@map("freelancers")
}

// Assignment Management
model Assignment {
  id           String   @id @default(uuid())
  freelancerId String
  projectId    String
  startDate    DateTime?
  endDate      DateTime?
  allocation   Float?   // Percentage of time allocated
  status       AssignmentStatus @default(ACTIVE)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  freelancer   Freelancer @relation(fields: [freelancerId], references: [id])
  project      Project    @relation(fields: [projectId], references: [id])
  userId       String?
  user         User?      @relation(fields: [userId], references: [id])

  @@unique([freelancerId, projectId])
  @@map("assignments")
}

// Asset & Moodboard Management
model MoodboardItem {
  id           String   @id @default(uuid())
  url          String
  title        String?
  description  String?
  tags         String[]
  moods        String[]
  colors       String[]
  shotType     String?
  source       String   // 'upload', 'unsplash', 'external'
  metadata     Json?
  isFavorite   Boolean  @default(false)
  projectId    String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  project      Project  @relation(fields: [projectId], references: [id])
  collections  MoodboardCollectionItem[]

  @@map("moodboard_items")
}

model MoodboardCollection {
  id          String   @id @default(uuid())
  name        String
  description String?
  projectId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  items       MoodboardCollectionItem[]

  @@unique([name, projectId])
  @@map("moodboard_collections")
}

model MoodboardCollectionItem {
  id              String @id @default(uuid())
  collectionId    String
  moodboardItemId String

  collection      MoodboardCollection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  item            MoodboardItem       @relation(fields: [moodboardItemId], references: [id], onDelete: Cascade)

  @@unique([collectionId, moodboardItemId])
  @@map("moodboard_collection_items")
}

// Script Management
model Script {
  id        String   @id @default(uuid())
  title     String?
  content   String?
  tags      String[]
  projectId String
  userId    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  project Project @relation(fields: [projectId], references: [id])
  user    User?   @relation(fields: [userId], references: [id])

  @@map("scripts")
}

// Knowledge Management
model KnowledgeSource {
  id          String   @id @default(uuid())
  title       String
  content     String
  category    String
  sourceType  String   // 'asset', 'document', 'transcript', 'external'
  sourceId    String?
  projectId   String?
  userId      String?
  metadata    Json?
  embedding   Json?    // For vector search
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  project Project? @relation(fields: [projectId], references: [id])
  user    User?    @relation(fields: [userId], references: [id])

  @@map("knowledge_sources")
}

// Transcript Management
model Transcript {
  id          String   @id @default(uuid())
  jobId       String   @unique
  title       String?
  content     String?
  sourceUrl   String?
  status      TranscriptStatus @default(PENDING)
  projectId   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  project Project? @relation(fields: [projectId], references: [id])

  @@map("transcripts")
}

// Enums
enum ProjectStatus {
  PLANNED
  IN_PROGRESS
  REVIEW
  DELIVERED
  ARCHIVED
}

enum FreelancerStatus {
  AVAILABLE
  BUSY
  UNAVAILABLE
}

enum AssignmentStatus {
  ACTIVE
  COMPLETED
  CANCELLED
  ON_HOLD
}

enum TranscriptStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

// Note: Keeping the original User model for backward compatibility
model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int
}
