// prisma/schema.prisma
// Enhanced database schema for Studio Roster with Project Data Separation

generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "sqlite"
}

// Core User Management
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  avatar    String?
  role      String   @default("user")
  password  String?  // For authentication
  googleAccessToken  String?  // Google OAuth access token
  googleRefreshToken String?  // Google OAuth refresh token
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  projects   Project[]
  assignments Assignment[]
  scripts    Script[]
  assets     Asset[]
  knowledgeSources KnowledgeSource[]
  conversations Conversation[]
  pageMedia  PageMedia[]
  aiUsage    AIUsage[]
  projectAccessControl ProjectAccessControl[]
  projectEmbeddings ProjectEmbedding[]
  projectAuditLogs ProjectAuditLog[]

  @@map("users")
}

// Enhanced Project Management with Isolation
model Project {
  id          String   @id @default(uuid())
  title       String?
  name        String?  @unique
  description String?
  client      String?
  clientName  String?
  status      ProjectStatus @default(PLANNED)
  startDate   DateTime?
  endDate     DateTime?
  budget      Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Enhanced project isolation fields
  encryptionKeyId       String?   // For encrypted content
  dataRetentionDays     Int       @default(2555) // 7 years default
  accessLevel           String    @default("private") // 'private', 'team', 'public'
  complianceFlags       Json?
  createdBy             String?   // User ID who created the project
  lastAccessedAt        DateTime?
  archivedAt            DateTime?
  deletionScheduledAt   DateTime?

  // Relations
  userId        String?
  user          User?           @relation(fields: [userId], references: [id])
  roleRequirements RoleRequirement[]
  assignments   Assignment[]
  scripts       Script[]
  moodboardItems MoodboardItem[]
  assets        Asset[]
  knowledgeSources KnowledgeSource[]
  transcripts   Transcript[]
  conversations Conversation[]
  projectVersions ProjectVersion[]
  pageMedia     PageMedia[]
  aiUsage       AIUsage[]
  projectAccessControl ProjectAccessControl[]
  projectEmbeddings ProjectEmbedding[]
  projectAuditLogs ProjectAuditLog[]

  @@map("projects")
}

model RoleRequirement {
  id       String  @id @default(uuid())
  role     String
  count    Int?    @default(1)
  skills   Json @default("[]") // Array of required skills
  projectId String

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("role_requirements")
}

// Freelancer Management
model Freelancer {
  id           String   @id @default(uuid())
  name         String
  email        String?  @unique
  contactInfo  String?  @unique
  skills       Json @default("[]") // Array of skills
  role         String?
  rate         Float?
  status       FreelancerStatus @default(AVAILABLE)
  bio          String?
  phone        String?
  location     String?
  availability String?
  portfolio    String?
  notes        String?
  rating       Float?   @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  assignments Assignment[]

  @@map("freelancers")
}

// Assignment Management
model Assignment {
  id           String   @id @default(uuid())
  freelancerId String
  projectId    String
  role         String?
  startDate    DateTime?
  endDate      DateTime?
  allocation   Float?   // Percentage of time allocated
  status       AssignmentStatus @default(ACTIVE)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  freelancer   Freelancer @relation(fields: [freelancerId], references: [id])
  project      Project    @relation(fields: [projectId], references: [id])
  userId       String?
  user         User?      @relation(fields: [userId], references: [id])

  @@unique([freelancerId, projectId])
  @@map("assignments")
}

// Asset & Moodboard Management
model MoodboardItem {
  id           String   @id @default(uuid())
  url          String
  title        String?
  description  String?
  caption      String?
  tags         Json @default("[]")
  moods        Json @default("[]")
  colors       Json @default("[]")
  shotType     String?
  source       String   // 'upload', 'unsplash', 'external'
  assetId      String?  // Link to Asset table
  metadata     Json?
  isFavorite   Boolean  @default(false)
  projectId    String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  project      Project  @relation(fields: [projectId], references: [id])
  asset        Asset?   @relation(fields: [assetId], references: [id])
  collections  MoodboardCollectionItem[]

  @@map("moodboard_items")
}

model MoodboardCollection {
  id          String   @id @default(uuid())
  name        String
  description String?
  projectId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  items       MoodboardCollectionItem[]

  @@unique([name, projectId])
  @@map("moodboard_collections")
}

model MoodboardCollectionItem {
  id              String @id @default(uuid())
  collectionId    String
  moodboardItemId String

  collection      MoodboardCollection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  item            MoodboardItem       @relation(fields: [moodboardItemId], references: [id], onDelete: Cascade)

  @@unique([collectionId, moodboardItemId])
  @@map("moodboard_collection_items")
}

// Asset Management
model Asset {
  id          String   @id @default(uuid())
  title       String?
  url         String   // Public URL for access
  type        String   // 'image', 'video', 'document', etc.
  fileName    String?  // Original filename
  mimeType    String?  // MIME type
  sizeBytes   Int?     // File size in bytes
  storageKey  String?  // Storage key/path
  metadata    Json?
  projectId   String?
  userId      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  project     Project? @relation(fields: [projectId], references: [id])
  user        User?    @relation(fields: [userId], references: [id])
  moodboardItems MoodboardItem[]

  @@map("assets")
}

// Script Management
model Script {
  id        String   @id @default(uuid())
  title     String?
  content   String?
  tags      Json @default("[]")
  projectId String
  userId    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  project Project @relation(fields: [projectId], references: [id])
  user    User?   @relation(fields: [userId], references: [id])

  @@map("scripts")
}

// Enhanced Knowledge Management with Project Isolation
model KnowledgeSource {
  id          String   @id @default(uuid())
  title       String
  content     String
  category    String
  sourceType  String   // 'asset', 'document', 'transcript', 'external'
  sourceId    String?
  projectId   String?
  userId      String?
  metadata    Json?
  embedding   Json?    // For vector search
  status      String?  @default("indexed")
  type        String?
  originalContent String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Enhanced isolation fields
  accessLevel         String    @default("private")
  encryptionStatus    String    @default("unencrypted")
  complianceFlags     Json?
  classificationConfidence Float?
  retentionPolicy     String    @default("standard")

  // Relations
  project Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User?    @relation(fields: [userId], references: [id])

  @@map("knowledge_sources")
}

// Transcript Management
model Transcript {
  id          String   @id @default(uuid())
  jobId       String   @unique
  title       String?
  content     String?
  sourceUrl   String?
  status      TranscriptStatus @default(PENDING)
  projectId   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  project Project? @relation(fields: [projectId], references: [id])

  @@map("transcripts")
}

// Enhanced Conversation with Project Isolation
model Conversation {
  id          String   @id @default(uuid())
  title       String?
  topic       String?
  projectId   String?
  userId      String?
  status      ConversationStatus @default(ACTIVE)
  messageCount Int     @default(0)
  metadata    Json?

  // Enhanced isolation fields
  sensitivityLevel     String    @default("standard") // 'public', 'internal', 'confidential'
  encryptionKeyId      String?
  autoDeleteAt         DateTime?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  project        Project?         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user           User?            @relation(fields: [userId], references: [id])
  messages       Message[]
  contextSnapshots ContextSnapshot[]

  @@index([projectId])
  @@index([userId])
  @@index([status])
  @@map("conversations")
}

model Message {
  id          String   @id @default(uuid())
  conversationId String
  role        MessageRole
  content     String
  tokens      Int?     // Track token usage
  embeddingId String?   // Link to embedding if indexed as knowledge source
  referencedSources Json @default("[]") // JSON array of KnowledgeSource IDs cited in response
  createdAt   DateTime @default(now())

  // Relations
  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@index([role])
  @@map("messages")
}

model ContextSnapshot {
  id          String   @id @default(uuid())
  conversationId String
  projectId   String?
  briefContext Json?    // Project brief at this point
  brandTensor  Json?    // Brand context
  assetIntelligence Json? // Asset analysis snapshot
  knowledgeSourceIds Json @default("[]") // Array of KnowledgeSource IDs active at this point
  capturedAt  DateTime @default(now())

  // Relations
  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@map("context_snapshots")
}

// Project Version Management
model ProjectVersion {
  id          String   @id @default(uuid())
  projectId   String
  version     Int
  briefSnapshot String?
  tagsSnapshot  Json @default("[]") // Array of tags
  assetsSnapshot Json?
  createdAt   DateTime @default(now())
  createdBy   String?  // userId
  changeDescription String?

  // Relations
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@map("project_versions")
}

// Embedding Management
model Embedding {
  id          String   @id @default(uuid())
  content     String
  embedding   Json     // Vector embedding data
  model       String   // embedding model used (e.g., 'text-embedding-004')
  metadata    Json?    // Additional metadata
  createdAt   DateTime @default(now())

  @@map("embeddings")
}

// Page Media Management
model PageMedia {
  id          String   @id @default(uuid())
  url         String
  title       String?
  alt         String?
  s3Key       String?  // Storage key for S3/GCS
  mediaType   String?  // Type of media (image, video, document)
  filename    String?  // Original filename
  size        Int?     // File size in bytes
  mimeType    String?  // MIME type
  projectId   String?
  userId      String?
  metadata    Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  project Project? @relation(fields: [projectId], references: [id])
  user    User?    @relation(fields: [userId], references: [id])

  @@map("page_media")
}

// AI Usage Tracking
model AIUsage {
  id          String   @id @default(uuid())
  userId      String?
  projectId   String?
  model       String   // AI model used
  tokens      Int      // Number of tokens used
  cost        Float?   // Cost in USD
  operation   String   // Type of operation (chat, analysis, generation, etc.)
  endpoint    String?  // API endpoint used
  timestamp   DateTime? // Custom timestamp (different from createdAt)
  cached      Boolean? @default(false) // Whether response was cached
  duration    Int?     // Response time in milliseconds
  metadata    Json?    // Additional metadata
  createdAt   DateTime @default(now())

  // Relations
  user    User?    @relation(fields: [userId], references: [id])
  project Project? @relation(fields: [projectId], references: [id])

  @@index([userId])
  @@index([projectId])
  @@index([createdAt])
  @@map("ai_usage")
}

// Project Isolation Models for Enhanced Security
model ProjectAccessControl {
  id            String   @id @default(uuid())
  projectId     String
  userId        String
  role          String   @default("viewer") // 'owner', 'editor', 'viewer'
  permissions   Json     @default("[]") // Granular permissions
  grantedAt     DateTime @default(now())
  grantedBy     String?  // User ID who granted access

  // Relations
  project       Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user          User?    @relation(fields: [userId], references: [id])

  @@unique([projectId, userId])
  @@index([projectId])
  @@index([userId])
  @@map("project_access_control")
}

model ProjectEmbedding {
  id            String   @id @default(uuid())
  projectId     String
  userId        String?
  contentHash   String
  embedding     Json     // Vector embedding data
  metadata      Json     // Additional metadata
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  project       Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user          User?    @relation(fields: [userId], references: [id])

  @@index([projectId])
  @@index([userId])
  @@index([createdAt])
  @@unique([projectId, contentHash])
  @@map("project_embeddings")
}

model ProjectAuditLog {
  id            String   @id @default(uuid())
  projectId     String
  userId        String?
  action        String   // Action performed
  resourceType  String   // Type of resource
  resourceId    String?  // ID of the resource
  metadata      Json?    // Additional metadata
  ipAddress     String?
  userAgent     String?
  timestamp     DateTime @default(now())

  // Relations
  project       Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user          User?    @relation(fields: [userId], references: [id])

  @@index([projectId])
  @@index([userId])
  @@index([timestamp])
  @@index([action])
  @@map("project_audit_log")
}

// Enums
enum ProjectStatus {
  PLANNED
  IN_PROGRESS
  REVIEW
  DELIVERED
  ARCHIVED
}

enum FreelancerStatus {
  AVAILABLE
  BUSY
  UNAVAILABLE
}

enum AssignmentStatus {
  ACTIVE
  COMPLETED
  CANCELLED
  ON_HOLD
}

enum TranscriptStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum ConversationStatus {
  ACTIVE
  ARCHIVED
  STARRED
}

enum MessageRole {
  USER
  ASSISTANT
}
