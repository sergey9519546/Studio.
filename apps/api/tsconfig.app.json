{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "../../dist/apps/api",
        "target": "ES2022",
        "types": [
            "node"
        ],
        "baseUrl": "./",
        "rootDir": "."
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "../../src",
        "../../components",
        "test/**/*",
        "dist",
        "**/*spec.ts",
        "**/*.test.ts",
        "scripts/**/*",
        "src/components/**/*",
        "src/contexts/**/*",
        "src/hooks/**/*",
        "**/*.tsx"
    ]
}
